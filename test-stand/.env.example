# Пример конфигурации для production окружения
# Скопируйте этот файл в .env и настройте значения

# ==============================================
# СЕРВЕР
# ==============================================
SERVER_HOST=192.168.1.5
SERVER_USER=wogulis
SERVER_PATH=/home/wogulis/projects/wayrecall-tracker-system

# ==============================================
# POSTGRESQL / TIMESCALEDB
# ==============================================
POSTGRES_DB=tracker
POSTGRES_USER=tracker
POSTGRES_PASSWORD=CHANGE_ME_tracker_secure_password_2026

# ==============================================
# REDIS
# ==============================================
# Redis без пароля (внутренняя сеть Docker)
REDIS_PASSWORD=

# ==============================================
# GRAFANA
# ==============================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_grafana_admin_2026

# ==============================================
# KAFKA
# ==============================================
KAFKA_HEAP_OPTS=-Xmx768m -Xms768m
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://192.168.1.5:9092

# ==============================================
# ПРИЛОЖЕНИЕ
# ==============================================
# Connection Manager
CONNECTION_MANAGER_PORT=5001
CONNECTION_MANAGER_PROTOCOL=gt06

# Device Manager
DEVICE_MANAGER_PORT=8081
DEVICE_MANAGER_API_KEY=CHANGE_ME_api_key_device_manager

# History Writer
HISTORY_WRITER_PORT=8082
HISTORY_WRITER_BATCH_SIZE=1000

# ==============================================
# МОНИТОРИНГ
# ==============================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# ==============================================
# BACKUP
# ==============================================
BACKUP_PATH=/mnt/raid/backups
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=

# ==============================================
# АЛЕРТЫ
# ==============================================
ALERT_EMAIL=your-email@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=CHANGE_ME_smtp_password

# ==============================================
# TIMEZONE
# ==============================================
TZ=Europe/Moscow
